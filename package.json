{
  "name": "ts-demo",
  "version": "1.0.0",
  "description": "Project of example to develop with TS",
  "private": true,
  "scripts": {
    "tsNode": "cd src && ts-node index.ts",
    "start": "nodemon",
    "transpilation": "tsc",
    "build:prod": "rimraf ./dist && tsc",
    "build": "webpack --mode=production",
    "start:prod": "npm run build:prod && node dist/index.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:coverage": "jest --coverage --testResultsProcessor=jest-sonar-reporter",
    "sonar": "jest --ci --coverage",
    "lint": "eslint . --ext .ts",
    "lint.fix": "eslint . --ext .ts â€”-fix"
  },
  "keywords": [
    "typescript",
    "ts"
  ],
  "author": "@AlejandroGuillenB",
  "license": "ISC",
  "devDependencies": {
    "@golevelup/ts-jest": "^0.5.0",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/microservices": "^10.3.7",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.7",
    "@nestjs/websockets": "^10.3.7",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.29",
    "@types/passport-jwt": "^4.0.1",
    "@types/webpack": "^5.28.5",
    "@types/webpack-dev-server": "^4.7.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "class-transformer": "^0.5.1",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.7",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "snyk": "^1.1288.0",
    "typeorm": "^0.3.20"
  },
  "jest": {
    "testResultsProcessor": "./node_modules/jest-sonar-reporter",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      ".module.ts",
      ".spec.ts$",
      "auth/decorators/*"
    ],
    "testEnvironment": "node"
  }
}
